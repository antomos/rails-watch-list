





      <%= link_to "See all lists", lists_path %>

<div class="container">
<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')"
><h1><%= @list.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Name</th>
            <td><%= @list.name %></td>
          </tr>

        </tbody>
      </table>
</div>
  <div class="container">
    <div class="row row-cols-2">


    <div class="col">
        <h2>Add a movie</h2>
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.input :movie_id, collection: Movie.order('title')%>
            <%= f.input :comment, hint: 'Min 6 characters' %>
            <%= f.submit 'Add a movie to the list', class: "btn btn-default btn-primary"  %>
          <% end %>
      </div>
    </div>
    <div class="row row-cols-3">
    <%= "You haven't saved any movies yet!" if @list.movies.empty? %>
      <%  @list.movies.each do |movie| %>
          <div class="col">
              <% @new_bookmark = Bookmark.find_by(list: @list, movie: movie) %>
              <div class="row"><strong><%= movie.title%></strong></div>
              <div class="row"><img src="<%= movie.poster_url%>" class="img-thumbnail" alt="<%= movie.title%>"></div>
              <div class="row"><strong>Overview: </strong><%= movie.overview%></div>
              <div class="row"><strong>My Comments: </strong><%= @new_bookmark.comment%> </div>
              <div class="row"> <strong>Rating: </strong><%= movie.rating%>
              <strong><%= link_to "Delete",  bookmark_path(@new_bookmark),  data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}%></strong></div>
          </div>
          <% end %>
    </div>
    <div class="container">
      <div class="row row-cols-2">
          <div class="col">
            <h3><strong>Reviews</strong></h3>
            <%= "No reviews yet!" if @list.reviews.empty? %>
            <%  @list.reviews.each do |review| %>
              <div class="row">
                  <li class="list-group-item">
                      <small>
                        <% count = 0 %>
                        <% 5.times do %>
                          <% if review.rating > count %>
                            <i class="fa-solid fa-star"></i>
                          <% else %>
                            <i class="fa-regular fa-star"></i>
                          <% end %>
                          <% count += 1 %>
                        <% end %>
                      </small>
                      <p><%= review.content %></p>
                      <strong><%= link_to "Delete",  review_path(review),  data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review?"}%></strong>
                  </li>
              </div>
            <% end %>
          </div>
          <div class="col">
            <h2>New review</h2>
              <%= simple_form_for [@list, @review] do |f| %>
                <%= f.input :rating, collection: 0..5 %>
                <%= f.input :content %>
                <%= f.submit 'Add a review' , class: 'btn btn-primary' %>
              <% end %>
          </div>
      </div>
    </div>
</div>
